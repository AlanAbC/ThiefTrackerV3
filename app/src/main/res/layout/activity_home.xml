<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Home">
        <android.support.v4.widget.DrawerLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_height="match_parent"
                android:id="@+id/dLayout"
                android:layout_width="match_parent">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <RelativeLayout
                            android:id="@+id/btnMenu"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:elevation="4dp"
                            android:background="@drawable/white_circle" >
                        <ImageView
                                android:layout_width="match_parent"
                                android:src="@drawable/menu"
                                android:layout_height="match_parent"
                                android:scaleType="centerInside"
                                android:padding="10dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:id="@+id/filterselectedContainer"
                            android:layout_width="250dp"
                            android:layout_height="40dp"
                            android:visibility="gone"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:animateLayoutChanges="true"
                            android:elevation="4dp"
                            android:background="@drawable/white_circle" >
                        <TextView
                                android:id="@+id/txtFilter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Selecciona un filtro..."
                                android:textColor="@color/gray_txt"
                                android:layout_marginTop="10dp"
                                android:textAlignment="center"/>
                        <ImageView
                                android:id="@+id/arrow"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/arrow_down"
                                android:scaleType="centerInside"
                                android:padding="4dp"/>
                        <android.support.v7.widget.RecyclerView android:id="@+id/list_filter" android:visibility="gone" android:layout_width="match_parent"
                                                                android:layout_height="match_parent" android:layout_below="@id/arrow"></android.support.v7.widget.RecyclerView>
                    </RelativeLayout>
                    <RelativeLayout
                            android:id="@+id/btnCloseFilter"
                            android:layout_width="40dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:layout_alignParentEnd="true"
                            android:animateLayoutChanges="true"
                            android:layout_marginTop="10dp"
                            android:elevation="4dp"
                            android:background="@drawable/white_circle" >
                        <ImageView
                                android:layout_alignParentEnd="true"
                                android:layout_width="40dp"
                                android:src="@drawable/close"
                                android:layout_height="40dp"
                                android:scaleType="centerInside"
                                android:padding="13dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:id="@+id/btnSearch"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:layout_alignParentEnd="true"
                            android:animateLayoutChanges="true"
                            android:layout_marginTop="10dp"
                            android:elevation="4dp"
                            android:background="@drawable/white_circle" >
                        <EditText
                                android:background="@android:color/transparent"
                                android:hint="Buscar..."
                                android:textColorHint="@color/light_gray_txt"
                                android:textColor="@color/gray_txt"
                                android:visibility="gone"
                                android:layout_toStartOf="@id/icon_search"
                                android:layout_marginEnd="5dp"
                                android:id="@+id/inputsearch"
                                android:layout_width="match_parent"
                                android:layout_marginStart="15dp"
                                android:layout_height="40dp"/>
                        <ImageView
                                android:id="@+id/icon_search"
                                android:layout_alignParentEnd="true"
                                android:layout_width="40dp"
                                android:src="@drawable/search"
                                android:layout_height="40dp"
                                android:scaleType="centerInside"
                                android:padding="10dp"/>
                    </RelativeLayout>
                    <com.mapbox.mapboxsdk.maps.MapView
                            android:id="@+id/mapView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                    />
                    <RelativeLayout
                            android:id="@+id/btnUserLocation"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="20dp"
                            android:elevation="4dp"
                            android:background="@drawable/white_circle" >
                        <ImageView
                                android:layout_width="match_parent"
                                android:src="@drawable/location"
                                android:layout_height="match_parent"
                                android:scaleType="centerInside"
                                android:padding="6dp"/>
                    </RelativeLayout>
                </RelativeLayout>
                <android.support.design.widget.NavigationView
                        android:id="@+id/navigation"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        app:menu="@menu/menu_layout"
                        app:itemTextColor="#898989"
                        app:headerLayout="@layout/header_menu">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:orientation="vertical"
                            android:padding="16dp">

                        <TextView
                                android:id="@+id/logout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Cerrar Sesion" />
                    </LinearLayout>
                </android.support.design.widget.NavigationView>

        </android.support.v4.widget.DrawerLayout>
        <include layout="@layout/bs_near_points" />
</android.support.design.widget.CoordinatorLayout>