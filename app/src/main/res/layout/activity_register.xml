<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".Register">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/logo" android:layout_width="22dp" android:layout_height="22dp" android:background="@drawable/circle_green" android:layout_marginTop="30dp" android:layout_marginStart="20dp" >
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/thief"/>
        </RelativeLayout>

        <TextView android:layout_toEndOf="@id/logo" android:layout_marginTop="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/gray_txt" android:text="Thief Tracker" android:textStyle="bold" android:textSize="17sp" android:layout_marginStart="10dp"/>

        <TextView android:id="@+id/title" android:layout_below="@id/logo"  android:layout_marginTop="50dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/light_gray_txt" android:text="Registro" android:textStyle="bold" android:textSize="32sp" android:layout_marginStart="20dp"/>

        <EditText android:id="@+id/input_user" android:layout_width="match_parent" android:layout_height="55dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:layout_below="@id/title" android:layout_marginTop="30dp" android:inputType="textPersonName" android:background="@drawable/rounded_input_top" android:textColor="@color/gray_txt" android:textColorHint="@color/light_gray_txt" android:hint="Nombre" android:textSize="17sp" android:paddingStart="10dp"/>

        <EditText android:inputType="textEmailAddress" android:id="@+id/input_mail" android:layout_width="match_parent" android:layout_height="55dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:layout_below="@id/input_user" android:background="@drawable/input_middle" android:textColor="@color/gray_txt" android:textColorHint="@color/light_gray_txt" android:hint="Correo" android:textSize="17sp" android:paddingStart="10dp"/>

        <RelativeLayout android:layout_marginEnd="20dp" android:layout_marginStart="20dp" android:background="@drawable/input_middle" android:layout_below="@id/input_mail" android:id="@+id/input_date" android:layout_width="match_parent" android:layout_height="55dp">
            <TextView android:textSize="17sp" android:textColor="@color/light_gray_txt" android:layout_centerVertical="true" android:layout_marginStart="10dp" android:text="Fecha de Nacimiento" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/calendar" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:layout_marginEnd="15dp"/>
        </RelativeLayout>

        <RelativeLayout android:layout_marginEnd="20dp" android:layout_marginStart="20dp" android:background="@drawable/input_middle" android:layout_below="@id/input_date" android:id="@+id/input_sex" android:layout_width="match_parent" android:layout_height="55dp">
            <TextView android:textSize="17sp" android:textColor="@color/light_gray_txt" android:layout_centerVertical="true" android:layout_marginStart="10dp" android:text="Sexo" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <ImageView android:layout_width="13dp" android:layout_height="13dp" android:src="@drawable/caret_down" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:layout_marginEnd="15dp"/>
        </RelativeLayout>

        <EditText android:inputType="textPassword" android:id="@+id/input_pass" android:layout_width="match_parent" android:layout_height="55dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:layout_below="@id/input_sex" android:background="@drawable/input_middle" android:textColor="@color/gray_txt" android:textColorHint="@color/light_gray_txt" android:hint="Contraseña" android:textSize="17sp" android:paddingStart="10dp"/>

        <EditText android:inputType="textPassword" android:id="@+id/input_pass_confirm" android:layout_width="match_parent" android:layout_height="55dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:layout_below="@id/input_pass" android:layout_marginBottom="20dp" android:background="@drawable/rounded_input_bottom" android:textColor="@color/gray_txt" android:textColorHint="@color/light_gray_txt" android:hint=" Confirmar Contraseña" android:textSize="17sp" android:paddingStart="10dp"/>

        <Button android:id="@+id/btn_login" android:layout_width="match_parent" android:layout_height="55dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:background="@drawable/rounded_button" android:layout_below="@id/input_pass_confirm" android:layout_marginTop="30dp" android:text="Registrarme" android:textColor="@color/white" android:textAllCaps="false" android:textSize="20sp" android:layout_marginBottom="20dp"/>
    </RelativeLayout>


</ScrollView>